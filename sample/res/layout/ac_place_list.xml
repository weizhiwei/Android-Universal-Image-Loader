<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.nostra13.example.universalimageloader.InterceptableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_view_height"
        android:id="@+id/ic_mapcontainer">
        <com.esri.android.map.MapView
            android:id="@+id/ic_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapoptions.MapType="NATIONAL_GEOGRAPHIC"
            mapoptions.ZoomLevel="0" />
    </com.nostra13.example.universalimageloader.InterceptableFrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/ic_swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/ic_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="20dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            android:padding="0dp" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
